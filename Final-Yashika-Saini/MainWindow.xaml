<Window x:Class="Final_Yashika_Saini.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Yashika_Saini"
        mc:Ignorable="d"
        Title="MainWindow" Height="504" Width="844">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="10" Grid.ColumnSpan="2">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                <Button Name="btnGetAllEmployees" Content="Get all Employees" Width="150" Margin="5" Click="btnGetAllEmployees_Click"/>
                <Button Name="btnSearchEmployeeByTitle" Content="Search Employee by Title" Width="200" Margin="5" Click="btnSearchEmployeeByTitle_Click"/>
                <Button Name="btnInsertEmployee" Content="Insert Employee" Width="150" Margin="5" Click="btnInsertEmployee_Click"/>
                <Button Name="btnGetOrders" Content="Get Orders" Width="150" Margin="5" Click="btnGetOrders_Click"/>
                <Button Name="btnExit" Content="Exit" Width="100" Margin="5" Click="btnExit_Click"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="ID:" Width="100"/>
                    <TextBox Name="txtID" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Title:" Width="100"/>
                    <TextBox Name="txtTitle" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="First Name:" Width="100"/>
                    <TextBox Name="txtFirstName" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Last Name:" Width="100"/>
                    <TextBox Name="txtLastName" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Birth Date:" Width="100"/>
                    <TextBox Name="txtBirthDate" Width="200"/>
                </StackPanel>
            </StackPanel>

            <DataGrid Name="dataGrid" Height="248" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
